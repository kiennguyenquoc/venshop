- provide(:title, "Product Detail")
= render 'layouts/list_categories'
h1
  | Product Detail
.col-md-9
  .thumbnail
    = image_tag(@product.image, alt: @product.name, class: "img-responsive")
    br
    hr
    .caption-full
      br
      h4
        b
          = @product.name
      p
        = simple_format(@product.description)
      h3
        b
          | Price: $
        = (@product.price/100.00)
        = form_tag cart_products_path do
          p
            = hidden_field_tag :product_id, @product.id
            |  Quantity: 
            = number_field_tag :quantity, "1", class: 'form-control', :style => "width: 100px;"
            br
            = submit_tag "Add To cart", :class => "btn btn-primary", :style => "width: 100px"
