header
  #top2
    ul.myaccountmenu
      li
        = link_to "All Products", products_path
      li
        = link_to "Carts", carts_path
      li
        = link_to "Categories", categories_path
      - if !admin_signed_in? && !user_signed_in?
        li.login
          = link_to "Log in", new_user_session_path
      - elsif user_signed_in?
        li
          = link_to "Shopping history", shopping_history_index_path
        li
          = link_to "Edit user", edit_user_registration_path
        li.login
          = link_to "Log out", destroy_user_session_path, method: "delete"
      - elsif admin_signed_in?
        li
          = link_to "Admin - products", admin_products_path
        li
          = link_to "Admin - Users", admin_users_path
        li
          = link_to "Admin - Carts", admin_carts_path
        li
          = link_to "Edit admin", edit_admin_registration_path
        li
          = link_to "Log out", destroy_admin_session_path, method: "delete"
    #login-box.login-popup
  #top3
    h1.logo
      = link_to "Shopy mart", root_path
    = form_tag search_path, method: :get, class: :search_bar do
      fieldset
        = text_field_tag :keyword, nil, class: 'search', name: "search", placeholder: 'Enter a keywords...'
        = submit_tag "Search", :class => "submit"
